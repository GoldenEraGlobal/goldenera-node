<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <property name="INTERNAL_LOG_PATH" value="/app/node_logs" />

    <springProperty scope="context" name="LOG_FILENAME" source="LOGGING_FILE"
        defaultValue="node.log" />

    <property name="FULL_LOG_FILE" value="${INTERNAL_LOG_PATH}/${LOG_FILENAME}" />

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${FULL_LOG_FILE}</file>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${INTERNAL_LOG_PATH}/archived/${LOG_FILENAME}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <root level="${LOGGING_LEVEL_ROOT:-INFO}">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <logger name="global.goldenera" level="${LOGGING_LEVEL_GLOBAL_GOLDENERA:-INFO}" />

</configuration>